@page
@model ListModel
@{
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            <input type="search" class="form-control" asp-for="SearchTxt"/>
            <span class="input-group-btn">
                <button class="btn btn-default">
                    <i class="glyphicon glyphicon-search"></i>
                </button>
            </span>
        </div>
    </div>
</form>

<table class="table">
     @foreach(var restaurant in Model.Restaurants)
     {
    <tr>
        <td>@restaurant.Id</td>
        <td>@restaurant.Name</td>
        <td>@restaurant.Location</td>
        <td>@restaurant.Cuisine</td>
        <td>
            <a asp-page="./Detail" asp-route-restaurantId="@restaurant.Id" class="btn btn-lg"><i class="glyphicon glyphicon-zoom-in"></i></a>
        </td>
        <td>
            <a asp-page="./Edit" asp-route-restaurantId="@restaurant.Id" class="btn btn-lg"><i class="glyphicon glyphicon-edit"></i></a>
        </td>
    </tr>
     }
</table>

<a asp-page="./Edit" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add New</a>